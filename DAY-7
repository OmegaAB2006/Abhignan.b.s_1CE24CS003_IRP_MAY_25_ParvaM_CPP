#include<iostream>
using namespace std;
class student{
   
    public:
    int empid;
    string tname;
    string state;
    string city;
    string designation;
    int age;
    string gender;
    string  color;
    string desg;
    int a=tname.length();
    string x;
  
   
    string mr="MR.";
    string mrs="MRS.";

    void setName(string cname){
        this->tname=cname;
    }
    string getName(){
        return tname;
    
    }
    

void setStudnet(){
    
    cout<<"Enter employee id : ";
    cin>>empid;

    cout<<"Enter name : ";
    cin.ignore();
    getline(cin,tname);

     cout<<"Enter gender: ";
    cin>>gender;
     
    cout<<"Enter age : ";
    cin>>age;

    cout<<"Enter state : ";
    cin>>state;

    cout<<"Enter city : ";
    cin>>city;

    cout<<"Enter Designation: ";
    cin>>desg;

  
}
void Gender(){
if(gender=="F"){
       tname=mrs+tname;
    }
    else{
        tname=mr+tname;
    }
}

string Color(){
    if(city=="bengaluru"){
        color="Green";  
    }
    else if(city=="bengaluru"){
        color="Green";
}
  
    else if(city=="Belagavi"){
        color="red";
}
  
    else if(city=="Mysore"){
        color="Yellow";
    }
return color;
}



void dispalayStudent(){
    Gender();
    Color();
cout<<"  |  "<<this->empid<<"  |  "<<this->tname<<"  |  "<<this->gender<<"  |  "<<this->age<<"  |   "<<this->state<<"  |  "<<this->city<<"  |  "<<" |  "<<"  |  "<<this->desg<<"  |  "<<this->color<<endl;

    }


    
    
};
int main(){
    student s1;
    
    int n;
    cout<<"Enter n value for capture students: ";
    cin>>n;
     student*s=new student[n];
     for(int i=0;i<n;i++){
        cout<<"\n-----Enter student----"<<i+1<<endl;
        s[i].setStudnet();

     }
     cout<<"  |   "<<"empid"<<"  |  "<<"  |  "<<"Name"<<"  |  "<<"Gender"<<"  |   "<<"age"<<"  |   "<<"sclass"<<" |   "<<"ssem"<<"  |   "<<"COLOUR"<<"  |  "<<"  |  "<<endl;
     for(int i=0;i<n;i++){
        s[i].dispalayStudent();
       
     }
     cout<<"--------Name with AR---------"
    for (int i = 0; i < n; i++) {
        string checkName = s[i].getName();
       
        if (checkName.find("ar")!=string::npos) {
            s[i].dispalayStudent();
        }
    }

    delete[] s;
    return 0;
}
